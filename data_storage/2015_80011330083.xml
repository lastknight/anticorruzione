		<script type="text/javascript">
		   function setCookie(cname, cvalue, exdays)
			{
				var d = new Date();
				d.setTime(d.getTime() + (exdays*24*60*60*99999));
				var expires = "expires="+d.toUTCString();
				document.cookie = cname + "=" + cvalue + "; " + expires + "; path=/";
			}

			function getCookie(cname)
			{
				var name = cname + "=";
				var ca = document.cookie.split(';');
				
				for(var i=0; i<ca.length; i++)
				{
					var c = ca[i];
					while (c.charAt(0)==' ') c = c.substring(1);
					if (c.indexOf(name) == 0) return c.substring(name.length,c.length);
				}
				return "";
			}

			function mostraRicerca()
			{
				$("#ricerca-sito").fadeToggle(500);
				$("#mostra-ric").toggle(500);
				$("#chiudi-ric").toggle(500);
			}

			function chiudiBarraPolicy()
			{
				$('#barra-policy').remove();
				
				setCookie("policychiusa","ok",365);
			}
			
			$(document).ready(function()
			{ 
				var contenutoCookie = getCookie("policychiusa");

				// Controllo se il cookie esiste
				if (contenutoCookie == 'ok')
				{
					$('#barra-policy').remove();
				}
				
				if($("table").attr("border")==0)
				{
				  $("td").css("border","0");
				}
			});
		</script>
			
		
